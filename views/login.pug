extends layout

block content
  // banner start
  .blog_banner_area
    .container
      .row
        .col-12
          .page_title
            h2 Login
  // banner end
  if errors
    div(class='alert alert-danger', style='text-align: center;')
      each error, i in errors
        p #{error.msg}
  // login start
  .register_area
    .container
      .row
        .col-md-3.col-sm-12
        .col-md-6.col-sm-12
          .register_customer
            h2.register_heading Registered Customer
            form(method='POST', action='/account/login')
              p
                | Username
                span  * 
                br
                input(name='username', type='text')
              p
                | Password
                span  * 
                br
                input(name='password', type='password')
              input(type='submit', value='LOGIN')
              p 
                | Don't have an account?
                a(href='/account/register')  Create one!
  // login end
