extends layout

block content
  // banner start
  .blog_banner_area
    .container
      .row
        .col-12
          .page_title
            h2 Register
  // banner end
  != messages('message', locals)
  if errors
    div(class='alert alert-danger', style='text-align: center;')
      each error, i in errors
        p #{error.msg}
  // register start
  .register_area
    .container
      .row
        .col-md-3.col-sm-12
        .col-md-6.col-sm-12
          .register_customer
            h2.register_heading Create a new account
            form(method='POST', action='/account/register')
              p
                | Name
                span  * 
                br
                input(name='name', type='text')
              p
                | Username
                span  * 
                br
                input(name='username', type='text')
              p
                | Email
                span  * 
                br
                input(name='email', type='email')
              p
                | Password
                span  * 
                br
                input(name='password', type='password')
              p
                | Re-Password
                span  * 
                br
                input(name='password2', type='password')
              p
                | Address
                span  * 
                br
                input(name='address', type='text')
              p
                | District
                span  * 
                br
                input(name='address2', type='text')
              p
                | Province
                span  * 
                br
                input(name='address3', type='text')
              p
                | Postal Code
                span  * 
                br
                input(name='address4', type='text', pattern='[0-9]{5}')
              p
                | Country
                span  * 
                br
                input(name='address5', type='text', value='Thailand', DISABLED)
              p
                | Telephone Number
                span  * 
                br
                input(name='tel_num', type='text', oninput="this.value=this.value.replace(/[^0-9]/g,'');")
              input(type='submit', value='REGISTER')
  // register end
