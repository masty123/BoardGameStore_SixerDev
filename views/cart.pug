extends layout

block content
  // banner start
  .blog_banner_area
    .container
      .row
        .col-12
          .page_title
            h2 SHOPPING CART
  // banner end
  // banner bottom start
  .banner_bottom_area
    .container
      .row
        .col-lg-4.col-md-4.col-sm-12
          .single_banner_bottom.active.text-center
            p.active 01
            h4 SHOPPING CART
        .col-lg-4.col-md-4.col-sm-12
          .single_banner_bottom.text-center
            p 02
            h4 CHECK OUT
        .col-lg-4.col-md-4.col-sm-12
          .single_banner_bottom.text-center
            p 03
            h4 ORDER COMPLETE
  // banner bottom end
  // cart start
  .cart_area
    .container
      .row
        .col-lg-12.col-md-12.col-sm-12
          p
            | You have picked 
            span  (3) items 
            | in your Bag
          .cart_list.table-responsive
            table.table_cart.table-bordered
              thead
                tr
                  th.product Item
                  th.description Description
                  th.unit_price Unit Price
                  th.quantity Quantity
                  th.value Subtotal
                  th.action
              tbody
                tr
                  td.product_img
                    a(href='#')
                      img(src='/img/trend/cart/cart1.jpg', alt='cart')
                  td.product_des
                    h3 Test1
                  td.u_price ฿333.00
                  td.p_quantity
                    .pp_quantity
                      span  03
                  td.p_value ฿333.00
                  td.p_action
                    a(href='#')
                      i.fa.fa-times
                tr
                  td.product_img
                    a(href='#')
                      img(src='/img/trend/cart/cart2.jpg', alt='cart')
                  td.product_des
                    h3 Test2
                  td.u_price ฿155.00
                  td.p_quantity
                    .pp_quantity
                      span  01
                  td.p_value ฿155.00
                  td.p_action
                    a(href='#')
                      i.fa.fa-times
                tr
                  td.product_img
                    a(href='#')
                      img(src='/img/trend/cart/cart3.jpg', alt='cart')
                  td.product_des
                    h3 Test3
                  td.u_price ฿250.00
                  td.p_quantity
                    .pp_quantity
                      span  01
                  td.p_value ฿250.00
                  td.p_action
                    a(href='#')
                      i.fa.fa-times
      .row
        .col-md-6.col-lg-6
          .shipping_total
            h2 total carts
            .mini_table
              table.table-bordered
                tbody
                  tr
                    td Sub total:
                    td ฿738.00
                  tr
                    td Shipping Fee:
                    td Free
                  tr
                    td Order Total:
                    td.purple_total ฿738.00
      .row
        .col-12
          .coupon
            .row
              .col-md-6.col-lg-6
              .col-md-6.col-lg-6
                .porcess-checkout
                  a.shopping(href='/') continue shopping
                  a.process(href='/checkout') process to checkout
  // cart area end
